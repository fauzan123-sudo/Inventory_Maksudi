<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".ui.EditBarang">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ProgressBar
                android:visibility="invisible"
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/tambahGambar1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_kamera"
                />

            <EditText
                android:id="@+id/namaBarang1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Barang"
                android:layout_margin="10dp" />

            <EditText
                android:id="@+id/jenisBarang1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jenis Barang"
                android:layout_margin="10dp" />

            <EditText
                android:id="@+id/hargaBarang1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Harga Barang"
                android:layout_margin="10dp" />

            <EditText
                android:id="@+id/jumlahBarang1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jumlah Barang"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/tanggal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_calendar"
                android:drawablePadding="10dp"
                android:text="Tanggal"
                android:textSize="17sp"
                android:layout_margin="10dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="291dp" />


            <TextView
                android:id="@+id/scanBarcode1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_barcode"
                android:drawableLeft="@drawable/ic_barcode"
                android:drawablePadding="10dp"
                android:hint="Barcode"
                android:textSize="17sp"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/simpan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Simpan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id1"
                android:text="id"

                />



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>